{
  "name": "vscode-git-copilot-tools",
  "displayName": "Git Copilot Tools",
  "publisher": "jhauga",
  "author": {
    "name": "John Haugabook"
  },
  "bugs": {
    "url": "https://github.com/jhauga/vscode-git-copilot-tools/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jhauga/vscode-git-copilot-tools"
  },
  "qna": "https://github.com/jhauga/vscode-git-copilot-tools/issues",
  "homepage": "https://github.com/jhauga/vscode-git-copilot-tools",
  "description": "Browse and download agents, instructions, plugins, prompts, and skills from GitHub repositories with Copilot custom tools. Clone of `timheuer/vscode-awesome-copilot` with additional features and slight variations.",
  "version": "0.0.0",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.103.0"
  },
  "activationEvents": [
    "onView:vscodeGitCopilotToolsExplorer"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vscodeGitCopilotTools",
          "title": "Git Copilot Tools",
          "icon": "resources/vscode-git-copilot-tools.svg"
        }
      ]
    },
    "configuration": {
      "title": "Git Copilot Tools",
      "properties": {
        "vscode-git-copilot-tools.repositories": {
          "type": "array",
          "title": "Repositories",
          "description": "Configure GitHub repositories as content sources",
          "default": [
            {
              "owner": "github",
              "repo": "vscode-git-copilot-tools",
              "label": "Git Copilot Tools"
            }
          ],
          "items": {
            "type": "object",
            "properties": {
              "owner": {
                "type": "string",
                "description": "Repository owner"
              },
              "repo": {
                "type": "string",
                "description": "Repository name"
              },
              "label": {
                "type": "string",
                "description": "Display name (optional)"
              },
              "baseUrl": {
                "type": "string",
                "description": "GitHub Enterprise URL (optional)"
              },
              "folderMappings": {
                "type": "object",
                "description": "Custom folder-to-category mappings (optional). Map category names to custom folder paths, 'root' (entire repo), or null (excluded).",
                "properties": {
                  "agents": {
                    "type": [
                      "string",
                      "null"
                    ],
                    "description": "Path to agents folder, 'root', or null to exclude"
                  },
                  "instructions": {
                    "type": [
                      "string",
                      "null"
                    ],
                    "description": "Path to instructions folder, 'root', or null to exclude"
                  },
                  "plugins": {
                    "type": [
                      "string",
                      "null"
                    ],
                    "description": "Path to plugins folder, 'root', or null to exclude"
                  },
                  "prompts": {
                    "type": [
                      "string",
                      "null"
                    ],
                    "description": "Path to prompts folder, 'root', or null to exclude"
                  },
                  "skills": {
                    "type": [
                      "string",
                      "null"
                    ],
                    "description": "Path to skills folder, 'root', or null to exclude"
                  },
                  "workflows": {
                    "type": [
                      "string",
                      "null"
                    ],
                    "description": "Path to workflows folder, 'root', or null to exclude"
                  }
                }
              }
            }
          },
          "scope": "application"
        },
        "vscode-git-copilot-tools.enterpriseToken": {
          "type": "string",
          "default": "",
          "description": "Personal Access Token for GitHub Enterprise authentication",
          "scope": "application",
          "markdownDescription": "Required permissions: `repo`, `read:org`, `read:user`  \nCreate at: your-github-enterprise.com/settings/tokens"
        },
        "vscode-git-copilot-tools.cacheTimeout": {
          "type": "number",
          "default": 3600000,
          "minimum": 60000,
          "maximum": 86400000,
          "description": "Cache duration in milliseconds (default: 1 hour)",
          "scope": "application"
        },
        "vscode-git-copilot-tools.autoRefresh": {
          "type": "boolean",
          "default": false,
          "description": "Automatically refresh content on VS Code startup",
          "scope": "application"
        },
        "vscode-git-copilot-tools.showTreeView": {
          "type": "boolean",
          "default": true,
          "description": "Show/hide the Git Copilot Tools tree view in the Explorer panel",
          "scope": "application"
        },
        "vscode-git-copilot-tools.allowInsecureEnterpriseCerts": {
          "type": "boolean",
          "default": false,
          "description": "⚠️ SECURITY WARNING: Allow insecure certificates for Enterprise GitHub servers. Only enable this for trusted enterprise environments with self-signed certificates.",
          "scope": "application",
          "markdownDescription": "**⚠️ SECURITY WARNING:** This setting disables TLS certificate validation for Enterprise GitHub servers only. Only enable for trusted enterprise environments with self-signed certificates.  \n\n**Default: `false` (secure)**  \n\n**Note:** If you're getting certificate errors with enterprise GitHub, enable this temporarily to add your repository, then you can disable it again for better security."
        },
        "vscode-git-copilot-tools.enableGithubAuth": {
          "type": "boolean",
          "default": true,
          "description": "Enable GitHub authentication via VS Code to increase rate limits from 60 to 5,000 requests per hour",
          "scope": "application",
          "title": "Enable GitHub Authentication",
          "markdownDescription": "**Enable GitHub Authentication**  \n\nWhen enabled, the extension will use VS Code's GitHub authentication to access the API with higher rate limits:  \n- **Authenticated:** 5,000 requests/hour  \n- **Unauthenticated:** 60 requests/hour  \n\nThe extension will prompt you to sign in when needed."
        },
        "vscode-git-copilot-tools.logLevel": {
          "type": "string",
          "enum": [
            "error",
            "warn",
            "info",
            "debug",
            "trace"
          ],
          "enumDescriptions": [
            "Only show error messages",
            "Show warnings and errors",
            "Show informational messages, warnings, and errors",
            "Show debug information and all above",
            "Show all logging including trace information"
          ],
          "default": "info",
          "description": "Set the logging level for the Git Copilot Tools extension",
          "scope": "application",
          "title": "Log Level"
        },
        "vscode-git-copilot-tools.checkForUpdates": {
          "type": "boolean",
          "default": true,
          "description": "Check for updates to downloaded items and notify when newer versions are available",
          "scope": "application"
        }
      }
    },
    "commands": [
      {
        "command": "vscode-git-copilot-tools.refreshVscodeGitCopilotTools",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "vscode-git-copilot-tools.downloadItem",
        "title": "Download",
        "icon": "$(cloud-download)"
      },
      {
        "command": "vscode-git-copilot-tools.previewItem",
        "title": "Preview",
        "icon": "$(open-preview)"
      },
      {
        "command": "vscode-git-copilot-tools.manageSources",
        "title": "Git Copilot Tools: Manage Sources",
        "icon": "$(repo)"
      },
      {
        "command": "vscode-git-copilot-tools.removeRepo",
        "title": "Remove Repository",
        "icon": "$(trash)"
      },
      {
        "command": "vscode-git-copilot-tools.refreshRepo",
        "title": "Refresh Repository",
        "icon": "$(refresh)"
      },
      {
        "command": "vscode-git-copilot-tools.configureEnterpriseToken",
        "title": "Git Copilot Tools: Configure Enterprise Token",
        "icon": "$(key)"
      },
      {
        "command": "vscode-git-copilot-tools.clearEnterpriseToken",
        "title": "Git Copilot Tools: Clear Enterprise Token",
        "icon": "$(trash)"
      },
      {
        "command": "vscode-git-copilot-tools.toggleTreeView",
        "title": "Git Copilot Tools: Toggle Tree View",
        "icon": "$(eye)"
      },
      {
        "command": "vscode-git-copilot-tools.showTreeView",
        "title": "Git Copilot Tools: Show Tree View",
        "icon": "$(eye)"
      },
      {
        "command": "vscode-git-copilot-tools.hideTreeView",
        "title": "Git Copilot Tools: Hide Tree View",
        "icon": "$(eye-closed)"
      },
      {
        "command": "vscode-git-copilot-tools.signInToGitHub",
        "title": "Git Copilot Tools: Sign in to GitHub",
        "icon": "$(github)"
      },
      {
        "command": "vscode-git-copilot-tools.signOutFromGitHub",
        "title": "Git Copilot Tools: Sign out from GitHub",
        "icon": "$(sign-out)"
      },
      {
        "command": "vscode-git-copilot-tools.openRepoInBrowser",
        "title": "Open Repository in Browser",
        "icon": "$(github)"
      },
      {
        "command": "vscode-git-copilot-tools.searchFiles",
        "title": "Search/Filter Files",
        "icon": "$(search)"
      },
      {
        "command": "vscode-git-copilot-tools.clearSearch",
        "title": "Clear Search Filter",
        "icon": "$(clear-all)"
      }
    ],
    "views": {
      "vscodeGitCopilotTools": [
        {
          "type": "webview",
          "id": "vscodeGitCopilotToolsSearch",
          "name": "Search Git Copilot Tools",
          "icon": "$(search)",
          "visibility": "visible"
        },
        {
          "id": "vscodeGitCopilotToolsExplorer",
          "name": "GitHub / vscode-git-copilot-tools",
          "icon": "icon.png"
        }
      ],
      "explorer": [
        {
          "type": "webview",
          "id": "vscodeGitCopilotToolsSearchSecondary",
          "name": "Search Git Copilot Tools",
          "icon": "$(search)",
          "visibility": "visible"
        },
        {
          "id": "vscodeGitCopilotToolsExplorerSecondary",
          "name": "Git Copilot Tools",
          "icon": "$(list-tree)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "vscodeGitCopilotToolsExplorer",
        "contents": "No repositories configured.\n[Manage Sources](command:vscode-git-copilot-tools.manageSources)\nBrowse and download instructions, prompts, plugins, and agents from the Git Copilot Tools community."
      },
      {
        "view": "vscodeGitCopilotToolsExplorerSecondary",
        "contents": "No repositories configured.\n[Manage Sources](command:vscode-git-copilot-tools.manageSources)\nBrowse and download instructions, prompts, plugins, and agents from the Git Copilot Tools community."
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "vscode-git-copilot-tools.refreshVscodeGitCopilotTools",
          "when": "view == vscodeGitCopilotToolsExplorer || view == vscodeGitCopilotToolsExplorerSecondary",
          "group": "navigation@2"
        },
        {
          "command": "vscode-git-copilot-tools.manageSources",
          "when": "view == vscodeGitCopilotToolsExplorer || view == vscodeGitCopilotToolsExplorerSecondary",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "vscode-git-copilot-tools.downloadItem",
          "when": "(view == vscodeGitCopilotToolsExplorer || view == vscodeGitCopilotToolsExplorerSecondary) && viewItem == copilotFile",
          "group": "inline@1"
        },
        {
          "command": "vscode-git-copilot-tools.previewItem",
          "when": "(view == vscodeGitCopilotToolsExplorer || view == vscodeGitCopilotToolsExplorerSecondary) && viewItem == copilotFile",
          "group": "inline@2"
        },
        {
          "command": "vscode-git-copilot-tools.openRepoInBrowser",
          "when": "(view == vscodeGitCopilotToolsExplorer || view == vscodeGitCopilotToolsExplorerSecondary) && viewItem == copilotRepo",
          "group": "inline@1"
        },
        {
          "command": "vscode-git-copilot-tools.refreshRepo",
          "when": "(view == vscodeGitCopilotToolsExplorer || view == vscodeGitCopilotToolsExplorerSecondary) && viewItem == copilotRepo",
          "group": "inline@2"
        },
        {
          "command": "vscode-git-copilot-tools.removeRepo",
          "when": "(view == vscodeGitCopilotToolsExplorer || view == vscodeGitCopilotToolsExplorerSecondary) && viewItem == copilotRepo",
          "group": "inline@3"
        },
        {
          "command": "vscode-git-copilot-tools.removeRepo",
          "when": "(view == vscodeGitCopilotToolsExplorer || view == vscodeGitCopilotToolsExplorerSecondary) && viewItem == copilotRepo",
          "group": "1_repo@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "nerdbank-gitversioning": "^3.6.133",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@timheuer/vscode-ext-logger": "^0.1.35",
    "axios": "^1.11.0"
  },
  "optionalDependencies": {
    "@esbuild/linux-x64": "^0.27.3"
  }
}
